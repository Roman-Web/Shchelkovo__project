mixin picture_png(img, alt)
	source(srcset="img_webp/" + img + ".webp", type="image/webp")
	img(src="img/" + img + ".png", alt= alt)

mixin picture_jpg(img, alt)
	source(srcset="img_webp/" + img + ".webp", type="image/webp")
	img(src="img/" + img + ".jpg", alt= alt)

mixin picture_gallery(img,alt,link)
	a(href= link).gallery-img__link
		picture
			source(srcset="img_webp/gallery/" + img + ".webp", type="image/webp")
			img(src="img/gallery/" + img + ".jpg", alt= alt)


